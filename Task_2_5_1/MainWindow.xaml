<Window x:Class="Task_2_5_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_2_5_1"
        mc:Ignorable="d"
        Title="Панель настроек" Height="500" Width="300">
    <Window.Resources>
        <Style x:Key="InteractiveButtonStyle"  
               BasedOn="{StaticResource BaseButtonStyle}">
            <Style.Triggers>
                <Trigger Property="Button.IsMouseOver" Value="True">
                    <Setter Property="Button.Foreground" Value="{StaticResource HoverColor}"/>
                </Trigger>
                <Trigger Property="Button.IsPressed" Value="True">
                    <Setter Property="Button.FontWeight" Value="Bold"/>
                </Trigger>
                <Trigger Property="Button.IsEnabled" Value="False">
                    <Setter Property="Button.Foreground" Value="{StaticResource DisabledColor}"/>
                </Trigger>

            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TextBlock
            Style="{StaticResource HeaderTextStyle}"
            Grid.Row="0"
            TextWrapping="Wrap" 
            Text="Настройки приложения"
            HorizontalAlignment="Center"
            Height="30"
            VerticalAlignment="Center"/>
        <Button Content="Сохранить"
                Style="{StaticResource InteractiveButtonStyle}"
                Grid.Row="1"
                Height="30"
                Width="100"/>
        <Button Content="Отменить"
                Style="{StaticResource InteractiveButtonStyle}"
                Grid.Row="2"
                Height="30"
                Width="100"/>
        <CheckBox Grid.Row="3"
                  x:Name="ToggleButton"
                  Content="Включить режим"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>
        <Button Content="Специальная кнопка"
                Style="{StaticResource InteractiveButtonStyle}"
                IsEnabled="{Binding IsChecked, ElementName=ToggleButton}"
                Grid.Row="4"
                Height="30"
                Width="130"/>
    </Grid>
</Window>
