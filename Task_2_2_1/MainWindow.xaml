<Window x:Class="Task_2_2_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_2_2_1"
        mc:Ignorable="d"
        Title="Простой текстовый редактор" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Name ="ButtonOpen" Content="Открыть" Grid.Column="0"  Width="100" Height="Auto" Margin="10" Click="ButtonOpen_Click" />
            <Button Name ="ButtonSave" Content="Сохранить как" Grid.Column="1"  Width="100" Height="Auto" Margin="10" Click="ButtonSave_Click"/>
            <Button Name ="ButtonInfo" Content="О программе" Grid.Column="2"  Width="100" Height="Auto" Margin="10" Click="ButtonInfo_Click"/>
        </Grid>
        <StatusBar Grid.Row="2" Height="Auto">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готов"/>
            </StatusBarItem>
        </StatusBar>
        <TextBox
            Grid.Row="1" 
            Name="textBox1"
            AcceptsReturn="True" 
            AcceptsTab="True" 
            ScrollViewer.HorizontalScrollBarVisibility="Auto" 
            ScrollViewer.VerticalScrollBarVisibility="Auto"/>

    </Grid>
</Window>
