<Window x:Class="Task_2_6_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_2_6_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <StackPanel>
        <TextBox 
            Text="Ввесдите текст здесь" 
            Margin="10"
            MaxLength="100"
            x:Name="TxtBox"/>
        <CheckBox 
            Content="Показать детали" 
            Margin="10"
            x:Name="ChkBox"/>
        <StackPanel Visibility="{Binding ElementName=ChkBox, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Margin="10" Text="{Binding StringFormat=Длина текста: {0}, ElementName=TxtBox,Path=Text.Length, Mode=OneWay}"/>
            <ProgressBar 
                Height="10" 
                Margin="10" 
                Maximum="100" 
                Minimum="0" 
                Value="{Binding ElementName=TxtBox,Path=Text.Length, Mode=OneWay}"/>    
        </StackPanel>
        

    </StackPanel>
</Window>
