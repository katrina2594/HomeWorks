<Window x:Class="Task_2_8_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_2_8_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="500">
    <Window.Resources>
        <DataTemplate x:Key="ProductDataTemplate">
            <Border x:Name="border" 
                    Padding="10" 
                    Background="LightBlue"
                    BorderThickness="1" 
                    CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Width="50" Height="50"
                        Source="{Binding ProductImage}" Margin="10"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Название: " FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ProductName}" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="Цена: " FontWeight="Bold"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ProductCost, StringFormat={}{0} руб.}" />
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding ProductType}">
                    <DataTrigger.Value>
                        <local:ProductTypes>Food</local:ProductTypes>
                    </DataTrigger.Value>
                    <Setter TargetName="border" Property="Background" Value="LightGreen" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" FontSize="20" Text="Список покупок:" />
        <ListBox Name="lstBox" Width="400" Margin="10" HorizontalContentAlignment="Stretch"
            ItemTemplate="{StaticResource ProductDataTemplate}" >
        </ListBox>
        </StackPanel>
</Window>
