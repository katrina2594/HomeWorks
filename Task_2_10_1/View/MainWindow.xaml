<Window x:Class="Task_2_10_1.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_2_10_1"
        xmlns:vm="clr-namespace:Task_2_10_1.ViewModels"
        mc:Ignorable="d"
        Title="Система входа" Height="500" Width="500">
    <Window.Resources>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <StackPanel>
        <TextBlock Text="Форма входа" FontSize="38" FontWeight="Bold" HorizontalAlignment="Center"/>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Логин:" Margin="20" FontSize="24"/>
            <Label Grid.Row="1" Grid.Column="0" Content="Пароль:" Margin="20" FontSize="24"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="20" FontSize="24"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Margin="20" FontSize="24"/>
        </Grid>
        <Button Height="50" Width="150" Content="Войти" FontSize="24" Margin="20" Command="{Binding LoginCommand}"/>
        <TextBlock 
            Text="{Binding StatusMessage}" 
            FontSize="24" 
            HorizontalAlignment="Center" 
            Margin="20" 
            Background="{Binding IsSuccess, Converter={StaticResource BoolToColorConverter}}"
            Padding="20"/>
    </StackPanel>
</Window>
