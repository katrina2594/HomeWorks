<Window x:Class="Task_2_7_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_2_7_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="300">
    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="IsThreeState" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Rectangle Grid.Row="0" x:Name="Rect" Width="10" Height="10" RadiusX="3" RadiusY="3" Stroke="DarkGray" />
                            <TextBlock Grid.Row="0" Name="X" Text="X" HorizontalAlignment="Center" Opacity="0" Foreground="DarkGray"/>
                            <Ellipse Grid.Row="0" Name="Ellipse" Fill="DarkGray" Height="5" Width="5" Opacity="0"/>
                            <ContentPresenter Grid.Row="1" x:Name="ChkCont" Content="{TemplateBinding Content}"/>

                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="X" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="{x:Null}">
                                <Setter TargetName="Ellipse" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <CheckBox Content="Unchecked" HorizontalAlignment="Left" IsChecked="False"/>
        <CheckBox Content="Checked" HorizontalAlignment="Center" IsChecked="True"/>
        <CheckBox Content="Indeterminate" HorizontalAlignment="Right" IsChecked="{x:Null}"/>

    </Grid>
</Window>
