<Window x:Class="test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ScrollViewer>
        <StackPanel Margin="10">
            <ItemsControl ItemsSource="{Binding Headers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" Padding="10" Background="LightGray" BorderBrush="DarkGray" BorderThickness="1">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" FontSize="16" Text="{Binding Title}" />
                                <ItemsControl ItemsSource="{Binding SubHeaders}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="5" Padding="5" Background="LightBlue" BorderBrush="Blue" BorderThickness="1">
                                                <StackPanel>
                                                    <TextBlock FontWeight="Bold" Text="{Binding Title}" />

                                                    <ItemsControl ItemsSource="{Binding SubHeaders}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Margin="5" Padding="5" Background="LightGreen" BorderBrush="Green" BorderThickness="1">
                                                                    <StackPanel>
                                                                        <TextBlock Text="{Binding Title}" />
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <ComboBox Width="100" Margin="5" />
                                                                            <ComboBox Width="100" Margin="5" />
                                                                            <Button Content="Submit" Margin="5" />
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</Window>
