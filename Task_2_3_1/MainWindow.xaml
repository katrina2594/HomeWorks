<Window x:Class="Task_2_3_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_2_3_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="360" ResizeMode="NoResize">
    <StackPanel Height="Auto">
        <Image Source="/img/Картинка для ДЗ.png" 
               Width="150" 
               Margin="10"></Image>
        <Label Content="Имя студента" Margin="5"/>
        <TextBox x:Name ="UserName" Margin="5"/>
        <Label Content="Факультет" Margin="5"/>
        <ComboBox Name="Faculty" 
                  Margin="5" 
                  VerticalAlignment="Top" 
                  IsEditable="True" 
                  SelectedIndex="0">
            <TextBlock>Программирование</TextBlock>
            <TextBlock>История</TextBlock>
            <TextBlock>Строительство</TextBlock>
        </ComboBox>
        <Label 
            Content="Форма обучения" 
            Margin="5"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="5,0,0,5">
            <RadioButton x:Name="RadioButton1" Content="Очно" IsChecked="True" />
            <RadioButton x:Name="RadioButton2" Content="Заочно" Margin="5,0,0,0"/>
        </StackPanel>
        <Label Content="Количество часов (0 - 100)"/>
        <TextBox Margin="5" 
                 x:Name="hourCount"
                 Text="0" TextChanged="hourCount_TextChanged" PreviewTextInput="hourCount_PreviewTextInput">
        </TextBox>
        <Slider 
            x:Name="Slider1"
            Value="0" 
            Minimum="0" 
            Maximum="100" 
            TickFrequency="1"
            IsSnapToTickEnabled="True"
            SelectionStart="0" 
            Height="30" 
            IsSelectionRangeEnabled="True" 
            Margin="5,0,0,5" ValueChanged="Slider_ValueChanged" >
        </Slider>
        <Label Content="Доступные курсы"/>
        <ListBox x:Name ="ListBox1" SelectionMode="Multiple" Margin="5" Height="Auto">
            <ListBoxItem>Основы C#</ListBoxItem>
            <ListBoxItem>WPF</ListBoxItem>
            <ListBoxItem>Базы данных</ListBoxItem>
        </ListBox>
        <CheckBox x:Name="MailingCheckBox" 
                  Margin="5,0,5,5"
                  Content="Я согласен на обработку данных"/>
        <Button Content="Записаться" 
                Margin="5,0,5,0" 
                Click="Button_Click"/>

    </StackPanel>
</Window>
